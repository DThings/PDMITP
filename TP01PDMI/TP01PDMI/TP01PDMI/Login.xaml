<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TP01PDMI.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Aplicação Teste" TextColor="White" FontSize="44" HorizontalTextAlignment="Center" Padding="30,30,30,30"/>
            
            <Label Text="Id" FontSize="20" Padding="10,10,30,10"/>
            <Entry x:Name="user"/>

            <Label Text="Pass" FontSize="20" Padding="10,0,30,0"/>
            <Entry  x:Name="senha"  IsPassword="True" Margin="0,0,0,70"/>
            
            

            <Button TextColor="Red" Text="Entrar" Clicked="btnEntrar"/>
            <Button TextColor="Red" Text="Limpar" Clicked="btnLimpar"/>
            <Button TextColor="Red" Text="Créditos" Clicked="btnCreditos"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>